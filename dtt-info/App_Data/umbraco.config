        <dnvArticle id="2859" key="70251d57-24bc-486d-880c-ba99b087118e" parentID="2853" level="4" creatorID="0" sortOrder="1" createDate="2019-06-21T15:11:47" updateDate="2019-06-24T14:42:48" nodeName="Redaktøren fortæller" urlName="redaktoeren-fortaeller" path="-1,1174,2268,2853,2859" isDoc="" nodeType="2687" creatorName="Jes Arbov" writerName="Jes Arbov" writerID="0" template="2686" nodeTypeAlias="dnvArticle" isPublished="true">
