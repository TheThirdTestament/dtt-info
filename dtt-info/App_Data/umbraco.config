      <articleItem id="1160" key="a6487de7-9bfd-48ab-b2ab-d35c71f76d97" parentID="1157" level="3" creatorID="0" sortOrder="14" createDate="2018-02-28T20:34:39" updateDate="2019-05-16T18:10:12" nodeName="Falske profeter og falske Kristus" urlName="falske-profeter-og-falske-kristus" path="-1,1174,1157,1160" isDoc="" nodeType="1054" creatorName="Jes Arbov" writerName="Jes Arbov" writerID="0" template="1067" nodeTypeAlias="articleItem" isPublished="true">
