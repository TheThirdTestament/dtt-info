        <dnvArticle id="2858" key="8b73db69-2fe4-4d51-8eda-4bdc86952fff" parentID="2853" level="4" creatorID="0" sortOrder="0" createDate="2019-06-21T15:10:16" updateDate="2019-06-24T14:42:48" nodeName="Verdensgenløsningsprincippet" urlName="verdensgenloesningsprincippet" path="-1,1174,2268,2853,2858" isDoc="" nodeType="2687" creatorName="Jes Arbov" writerName="Jes Arbov" writerID="0" template="2686" nodeTypeAlias="dnvArticle" isPublished="true">
