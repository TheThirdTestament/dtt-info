        <dnvArticle id="2872" key="28ddbf92-ca73-4aaa-924a-6e82e1f70ba7" parentID="2853" level="4" creatorID="0" sortOrder="14" createDate="2019-06-21T15:24:20" updateDate="2019-06-24T14:42:57" nodeName="Livets Evige Dans" urlName="livets-evige-dans" path="-1,1174,2268,2853,2872" isDoc="" nodeType="2687" creatorName="Jes Arbov" writerName="Jes Arbov" writerID="0" template="2686" nodeTypeAlias="dnvArticle" isPublished="true">
