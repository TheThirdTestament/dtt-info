                "rte",
                "quote"
              ],
              "hasConfig": false,
              "controls": [
                {
                  "value": "<h2>Guds lytte- og taleorganer</h2>",
                  "editor": {
                    "alias": "rte"
                  },
                  "active": false
                }
              ]
            },
            {
              "grid": 4,
              "allowAll": false,
              "allowed": [
                "media",
                "rte"
              ],
