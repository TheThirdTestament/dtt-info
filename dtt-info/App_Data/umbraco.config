        <dnvArticle id="2719" key="f2cf7458-c07d-42c9-b3f9-60194e24694b" parentID="2270" level="4" creatorID="0" sortOrder="13" createDate="2019-03-30T00:51:48" updateDate="2019-06-22T16:03:56" nodeName="Livet i den usynlige verden" urlName="livet-i-den-usynlige-verden" path="-1,1174,2268,2270,2719" isDoc="" nodeType="2687" creatorName="Jes Arbov" writerName="Jes Arbov" writerID="0" template="2686" nodeTypeAlias="dnvArticle" isPublished="true">
