        <dnvArticle id="2721" key="02112709-d262-490a-b94e-14c5fe98e430" parentID="2270" level="4" creatorID="0" sortOrder="15" createDate="2019-03-30T00:53:01" updateDate="2019-06-22T16:13:04" nodeName="Alle er velkomne" urlName="alle-er-velkomne" path="-1,1174,2268,2270,2721" isDoc="" nodeType="2687" creatorName="Jes Arbov" writerName="Jes Arbov" writerID="0" template="2686" nodeTypeAlias="dnvArticle" isPublished="true">
