        <dnvArticle id="2743" key="0c6d4d6a-d6ce-472a-8d1b-5dfae3973c7d" parentID="2646" level="4" creatorID="0" sortOrder="8" createDate="2019-03-30T01:20:20" updateDate="2019-03-31T20:04:23" nodeName="Hvilken rolle har Gud i Martinus verdensbillede" urlName="hvilken-rolle-har-gud-i-martinus-verdensbillede" path="-1,1174,2268,2646,2743" isDoc="" nodeType="2687" creatorName="Jes Arbov" writerName="Jes Arbov" writerID="0" template="2686" nodeTypeAlias="dnvArticle" isPublished="true">
