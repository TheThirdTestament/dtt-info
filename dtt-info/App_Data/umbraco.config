        <dnvArticle id="2734" key="1ce2aae0-a61f-4dd9-8fd9-565497ad9a6c" parentID="2430" level="4" creatorID="0" sortOrder="9" createDate="2019-03-30T01:07:47" updateDate="2019-05-16T18:36:08" nodeName="Mit liv med Martinus 2" urlName="mit-liv-med-martinus-2" path="-1,1174,2268,2430,2734" isDoc="" nodeType="2687" creatorName="Jes Arbov" writerName="Jes Arbov" writerID="0" template="2686" nodeTypeAlias="dnvArticle" isPublished="true">
