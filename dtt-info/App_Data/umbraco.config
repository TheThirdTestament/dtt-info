      <simplePage id="1153" key="ae1d9341-c3bc-47a7-98a8-0f589daa50c0" parentID="1151" level="3" creatorID="0" sortOrder="4" createDate="2018-02-28T20:27:01" updateDate="2018-03-08T21:08:35" nodeName="Martinus Åndsvidenskab" urlName="martinus-aandsvidenskab" path="-1,1174,1151,1153" isDoc="" nodeType="1059" creatorName="Jes Arbov" writerName="Jes Arbov" writerID="0" template="1073" nodeTypeAlias="simplePage" isPublished="true">
