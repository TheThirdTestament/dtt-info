        <dnvArticle id="2870" key="3734bad7-9451-4d97-8456-11fa9b34af34" parentID="2853" level="4" creatorID="0" sortOrder="12" createDate="2019-06-21T15:21:46" updateDate="2019-06-24T14:42:56" nodeName="Åndsvidenskab og materiel videnskab" urlName="åndsvidenskab-og-materiel-videnskab" path="-1,1174,2268,2853,2870" isDoc="" nodeType="2687" creatorName="Jes Arbov" writerName="Jes Arbov" writerID="0" template="2686" nodeTypeAlias="dnvArticle" isPublished="true">
