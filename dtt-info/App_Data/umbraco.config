        <dnvArticle id="2710" key="224a2d24-0e4b-49c0-bd5b-21ac8d1e0bbb" parentID="2270" level="4" creatorID="0" sortOrder="4" createDate="2019-03-30T00:44:34" updateDate="2019-05-22T00:57:03" nodeName="Aandsvidenskaben som Det Tredie Testamente" urlName="aandsvidenskaben-som-det-tredie-testamente" path="-1,1174,2268,2270,2710" isDoc="" nodeType="2687" creatorName="Jes Arbov" writerName="Jes Arbov" writerID="0" template="2686" nodeTypeAlias="dnvArticle" isPublished="true">
