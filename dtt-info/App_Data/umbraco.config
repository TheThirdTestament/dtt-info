      <book id="1220" key="032b1656-c462-4678-9a8b-23cd153b3bd4" parentID="1212" level="3" creatorID="0" sortOrder="4" createDate="2018-03-14T21:24:17" updateDate="2019-05-16T18:10:11" nodeName="Livets Bog V" urlName="livets-bog-v" path="-1,1174,1212,1220" isDoc="" nodeType="2255" creatorName="Jes Arbov" writerName="Jes Arbov" writerID="0" template="1209" nodeTypeAlias="book" isPublished="true">
