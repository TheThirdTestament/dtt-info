        <dnvArticle id="2711" key="aeb8aed2-f57c-404e-8910-071dc807dc25" parentID="2270" level="4" creatorID="0" sortOrder="5" createDate="2019-03-30T00:44:59" updateDate="2019-06-22T15:01:26" nodeName="Rolf Elving svarer på spørgsmål" urlName="rolf-elving-svarer-paa-spoergsmaal" path="-1,1174,2268,2270,2711" isDoc="" nodeType="2687" creatorName="Jes Arbov" writerName="Jes Arbov" writerID="0" template="2686" nodeTypeAlias="dnvArticle" isPublished="true">
