      <articleItem id="1158" key="cf0ec26f-b70a-4fa3-a0d6-367ebde7f5e9" parentID="1157" level="3" creatorID="0" sortOrder="0" createDate="2018-02-28T20:32:46" updateDate="2018-02-28T21:23:39" nodeName="Vejen til den sande lykke" urlName="vejen-til-den-sande-lykke" path="-1,1148,1157,1158" isDoc="" nodeType="1054" creatorName="Jes Arbov" writerName="Jes Arbov" writerID="0" template="1067" nodeTypeAlias="articleItem" isPublished="true">
