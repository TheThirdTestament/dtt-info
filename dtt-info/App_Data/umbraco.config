        <dnvArticle id="2713" key="5b24d9b5-65fa-4729-a500-02cdd9a2325d" parentID="2270" level="4" creatorID="0" sortOrder="7" createDate="2019-03-30T00:46:45" updateDate="2019-06-22T15:02:09" nodeName="Du skal ikke ihjelslå" urlName="du-skal-ikke-ihjelslaa" path="-1,1174,2268,2270,2713" isDoc="" nodeType="2687" creatorName="Jes Arbov" writerName="Jes Arbov" writerID="0" template="2686" nodeTypeAlias="dnvArticle" isPublished="true">
