        <dnvArticle id="2861" key="59616154-be09-460b-9635-1b9053ae0708" parentID="2853" level="4" creatorID="0" sortOrder="3" createDate="2019-06-21T15:14:46" updateDate="2019-06-24T14:42:49" nodeName="De store spørgsmål" urlName="de-store-spoergsmaal" path="-1,1174,2268,2853,2861" isDoc="" nodeType="2687" creatorName="Jes Arbov" writerName="Jes Arbov" writerID="0" template="2686" nodeTypeAlias="dnvArticle" isPublished="true">
