        <dnvArticle id="2864" key="fcad3070-9e33-41ea-bf55-a5cb5496477f" parentID="2853" level="4" creatorID="0" sortOrder="6" createDate="2019-06-21T15:17:31" updateDate="2019-06-24T14:42:49" nodeName="Gudsbegrebet og bønnen" urlName="gudsbegrebet-og-boennen" path="-1,1174,2268,2853,2864" isDoc="" nodeType="2687" creatorName="Jes Arbov" writerName="Jes Arbov" writerID="0" template="2686" nodeTypeAlias="dnvArticle" isPublished="true">
