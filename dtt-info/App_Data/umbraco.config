        <dnvArticle id="2767" key="4277060d-d10a-4322-9dc4-f34c05107fa5" parentID="2646" level="4" creatorID="0" sortOrder="0" createDate="2019-03-31T11:20:57" updateDate="2019-05-16T18:10:13" nodeName="Det Tredie Testamentes omslagssymboler" urlName="det-tredie-testamentes-omslagssymboler" path="-1,1174,2268,2646,2767" isDoc="" nodeType="2687" creatorName="Jes Arbov" writerName="Jes Arbov" writerID="0" template="2686" nodeTypeAlias="dnvArticle" isPublished="true">
