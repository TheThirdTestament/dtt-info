        <dnvArticle id="2720" key="18dfea2a-d7d0-42ac-a1fa-868362db5b43" parentID="2270" level="4" creatorID="0" sortOrder="14" createDate="2019-03-30T00:52:33" updateDate="2019-06-22T16:09:43" nodeName="Om mørke og om lys" urlName="om-moerke-og-om-lys" path="-1,1174,2268,2270,2720" isDoc="" nodeType="2687" creatorName="Jes Arbov" writerName="Jes Arbov" writerID="0" template="2686" nodeTypeAlias="dnvArticle" isPublished="true">
