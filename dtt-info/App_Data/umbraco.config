      <articleItem id="1161" key="821c8393-2e3d-4c34-b7d0-68d23c73f20c" parentID="1157" level="3" creatorID="0" sortOrder="15" createDate="2018-02-28T20:35:08" updateDate="2019-06-07T18:01:00" nodeName="Fortale til Livets Bog" urlName="fortale-til-livets-bog" path="-1,1174,1157,1161" isDoc="" nodeType="1054" creatorName="Jes Arbov" writerName="Jes Arbov" writerID="0" template="1067" nodeTypeAlias="articleItem" isPublished="true">
