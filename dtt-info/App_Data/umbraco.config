      <articleItem id="1162" key="ece38ea3-8708-4724-8a47-6b492f19c734" parentID="1157" level="3" creatorID="0" sortOrder="16" createDate="2018-02-28T20:36:20" updateDate="2018-03-11T14:07:02" nodeName="Opfyldelse af Kristi profetier" urlName="opfyldelse-af-kristi-profetier" path="-1,1174,1157,1162" isDoc="" nodeType="1054" creatorName="Jes Arbov" writerName="Jes Arbov" writerID="0" template="1067" nodeTypeAlias="articleItem" isPublished="true">
