        <dnvArticle id="2714" key="45493fed-02cb-4202-840d-e6c073f9c622" parentID="2270" level="4" creatorID="0" sortOrder="8" createDate="2019-03-30T00:47:04" updateDate="2019-06-22T15:03:52" nodeName="Mit liv med Martinus" urlName="mit-liv-med-martinus" path="-1,1174,2268,2270,2714" isDoc="" nodeType="2687" creatorName="Jes Arbov" writerName="Jes Arbov" writerID="0" template="2686" nodeTypeAlias="dnvArticle" isPublished="true">
