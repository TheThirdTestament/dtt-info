      <event id="2666" key="f3918eaf-3fff-454a-83f8-1e2c5513db2b" parentID="2665" level="3" creatorID="0" sortOrder="1" createDate="2019-03-25T19:57:27" updateDate="2019-03-27T20:56:50" nodeName="Sommerkursus 2019" urlName="sommerkursus-2019" path="-1,1174,2665,2666" isDoc="" nodeType="2655" creatorName="Jes Arbov" writerName="Jes Arbov" writerID="0" template="2654" nodeTypeAlias="event" isPublished="true">
