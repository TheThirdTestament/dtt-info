      </book>
      <book id="1222" key="44cea631-fbe4-40f2-a2f7-1351c0b4dc88" parentID="1212" level="3" creatorID="0" sortOrder="6" createDate="2018-03-14T21:26:57" updateDate="2019-05-16T18:10:12" nodeName="Livets Bog VII" urlName="livets-bog-vii" path="-1,1174,1212,1222" isDoc="" nodeType="2255" creatorName="Jes Arbov" writerName="Jes Arbov" writerID="0" template="1209" nodeTypeAlias="book" isPublished="true">
