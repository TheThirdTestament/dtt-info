      </book>
      <book id="1214" key="3f2f9b63-d9fa-4e39-aab6-37a8f90cdead" parentID="1212" level="3" creatorID="0" sortOrder="1" createDate="2018-03-14T21:15:20" updateDate="2019-05-16T18:10:11" nodeName="Livets Bog II" urlName="livets-bog-ii" path="-1,1174,1212,1214" isDoc="" nodeType="2255" creatorName="Jes Arbov" writerName="Jes Arbov" writerID="0" template="1209" nodeTypeAlias="book" isPublished="true">
