        <dnvArticle id="2712" key="8a5db243-1bae-4bfe-8d88-8567e076c011" parentID="2270" level="4" creatorID="0" sortOrder="6" createDate="2019-03-30T00:45:44" updateDate="2019-06-22T15:11:41" nodeName="Sagen bliver meget velhavende" urlName="sagen-bliver-meget-velhavende" path="-1,1174,2268,2270,2712" isDoc="" nodeType="2687" creatorName="Jes Arbov" writerName="Jes Arbov" writerID="0" template="2686" nodeTypeAlias="dnvArticle" isPublished="true">
