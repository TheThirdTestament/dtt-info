      <book id="1234" key="0c2cda56-9720-4cdd-a2de-f92102871645" parentID="1212" level="3" creatorID="0" sortOrder="17" createDate="2018-03-14T22:19:22" updateDate="2018-03-17T11:34:46" nodeName="Påske" urlName="paaske" path="-1,1174,1212,1234" isDoc="" nodeType="2255" creatorName="Jes Arbov" writerName="Jes Arbov" writerID="0" template="1209" nodeTypeAlias="book" isPublished="true">
