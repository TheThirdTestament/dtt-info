    <simplePage id="1154" key="74196e3b-039d-4ba1-888e-9dde7fc3ee38" parentID="1174" level="2" creatorID="0" sortOrder="2" createDate="2018-02-28T20:28:52" updateDate="2018-03-08T14:22:52" nodeName="Forfatteren" urlName="forfatteren" path="-1,1174,1154" isDoc="" nodeType="1059" creatorName="Jes Arbov" writerName="Jes Arbov" writerID="0" template="1073" nodeTypeAlias="simplePage" isPublished="true">
