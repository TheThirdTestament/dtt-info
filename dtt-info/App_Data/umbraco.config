        <dnvArticle id="2867" key="918dd4d4-d122-44b5-a175-d6251c1ea987" parentID="2853" level="4" creatorID="0" sortOrder="9" createDate="2019-06-21T15:18:57" updateDate="2019-06-24T14:42:49" nodeName="Om børns vilkår" urlName="om-boerns-vilkaar" path="-1,1174,2268,2853,2867" isDoc="" nodeType="2687" creatorName="Jes Arbov" writerName="Jes Arbov" writerID="0" template="2686" nodeTypeAlias="dnvArticle" isPublished="true">
