        <dnvArticle id="2845" key="fa12e6cf-0c12-4db2-93d6-1445967ae302" parentID="2270" level="4" creatorID="0" sortOrder="0" createDate="2019-05-22T00:56:30" updateDate="2019-05-22T01:02:50" nodeName="Forklaring til symbol nr. 20. Syndernes forladelse." urlName="forklaring-til-symbol-nr-20-syndernes-forladelse" path="-1,1174,2268,2270,2845" isDoc="" nodeType="2687" creatorName="Jes Arbov" writerName="Jes Arbov" writerID="0" template="2686" nodeTypeAlias="dnvArticle" isPublished="true">
