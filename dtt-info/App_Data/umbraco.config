              "controls": [
                {
                  "value": "<h2>Gud er allestedsnærværende, men alligevel personlig</h2>",
                  "editor": {
                    "alias": "rte"
                  },
                  "active": false
                }
              ]
            },
            {
              "grid": 4,
              "allowAll": false,
              "allowed": [
