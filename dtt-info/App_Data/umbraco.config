        <dnvArticle id="2744" key="797007fa-c99b-421e-9dda-7d52ffa45feb" parentID="2646" level="4" creatorID="0" sortOrder="6" createDate="2019-03-30T01:22:46" updateDate="2019-03-31T18:12:42" nodeName="Om at forholde sig til Verdens mørke" urlName="om-at-forholde-sig-til-verdens-moerke" path="-1,1174,2268,2646,2744" isDoc="" nodeType="2687" creatorName="Jes Arbov" writerName="Jes Arbov" writerID="0" template="2686" nodeTypeAlias="dnvArticle" isPublished="true">
