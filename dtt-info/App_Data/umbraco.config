      <articleItem id="1159" key="d54013f5-fad2-4054-a6b1-66900ada9b1d" parentID="1157" level="3" creatorID="0" sortOrder="13" createDate="2018-02-28T20:33:33" updateDate="2018-04-26T10:31:07" nodeName="Reinkarnationsprincippet" urlName="reinkarnationsprincippet" path="-1,1174,1157,1159" isDoc="" nodeType="1054" creatorName="Jes Arbov" writerName="Jes Arbov" writerID="0" template="1067" nodeTypeAlias="articleItem" isPublished="true">
